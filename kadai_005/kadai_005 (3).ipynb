    "#上辺・下辺・高さに変数を代入\n",
    "top= 10        #上辺(cm)\n",
    "bottom = 20    #下辺(cm)\n",
    "height = 5     #高さ(cm）\n",
    "#台形の面積を計算して変数 area に代入\n",
    "#（上辺 + 下辺）× 高さ ÷ ２\n",
    "area = (top+bottom) * height / 2\n",
    "\n",
    "print (str ( area ) + \"cm²\")"
   ]
